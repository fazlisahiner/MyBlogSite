                        <p class="text-muted">Email adresiniz ve şifreniz ile giriş yapabilirsiniz.</p>
                        <hr>
                        <form action="/Kullanici/GirisIndex" method="post">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input id="email" name="email" type="text" class="form-control">
                            </div>
                            <div class="form-group">
                                <label for="password">Şifre</label>
                                <input id="password" name="sifre" type="password" class="form-control">
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> Giriş</button>
                            </div>
                            <p class="text-center text-muted">Henüz kayıt olmadınız mı?</p>
                            <p class="text-center text-muted"><a href="register.html"><strong>Kayıt ol</strong></a>! Bir dakikada kolayca kaydolun</p>

                        </form>
                    </div>
                </div>
                <div class="col-lg-2">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>

            </div>
        </div>

    </div>
</div>