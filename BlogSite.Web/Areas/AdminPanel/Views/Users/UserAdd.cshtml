<section class="content">
    <div class="container-fluid">

        <!-- general form elements disabled -->
        <div class="card card-warning">
            <div class="card-header">
                <h3 class="card-title">Kullanıcı Ekle</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form action='~/Adminpanel/Users/UserAdd' method="post">
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Kullanıcı adı</label>
                                <input name="kulAdi" type="text" class="form-control" placeholder="">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Rol</label>



                                <select name="role" class="form-control">
                                    <option>Seçiniz</option>

                                    @foreach (var item in Model)
                                    {

                                        <option>@item.RoleName </option>


                                    }

                                </select>



                            </div>


                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label>E-mail</label>
                                <input name="email" type="text" class="form-control" placeholder="">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label>Şifre</label>
                                <input name="sifre" type="text" class="form-control" placeholder="">
                            </div>
                        </div>


                    </div>
                    <div class="row">

                        <div class="col-sm-12">

                            <div class="text-center">
                                <button type="submit" name="userAddButton" class="btn btn-primary"> Kullanıcı ekle</button>
                            </div>

                        </div>


                    </div>

                  
                </form>
                <p class="text-center" style="color: red; font-size:20px; font-weight:bolder; justify-content:center">
                    @ViewBag.Message
                </p>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
</section>

