@model List<Articles>

@{
    ViewBag.Title = "ArticlesIndex";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">
                    <a href='~/AdminPanel/Articles/ArticlesAdd' class='btn btn-block btn-success col-md-3'> Makale Ekle</a>
                </h1>
            </div><!-- /.col -->
            @*<div class="col-sm-6">

                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active"></li>
                    </ol>
                </div>*@<!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->

<section class="content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header bg-info">
                <h3 class="card-title">Makale Listesi</h3>
            </div>
            <!-- /.card-header -->

            <div class="card-body">
                <div class="table-container" style="max-width: 100%; overflow-x: auto; ">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th width="2%">ID</th>
                                <th width="8%">Başlık</th>
                                <th style="white-space: normal; width:auto">Makale</th>
                                <th width="10%">Eklenme Tarihi</th>
                                <th width="10%">Aktif Mi</th>
                                <th width="10%">Detay</th>
                                <th width="10%">Güncelle</th>
                                <th width="10%">Sil</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ArticleId</td>
                                    <td>
                                        @item.Title
                                    </td>
                                    @*<td>@Html.Raw(item.Content)</td>*@
                                    <td style="white-space: normal; width: auto">@Html.Raw(System.Web.HttpUtility.HtmlDecode(item.Content))</td>

                                    <td>@item.CreateDate.Date </td>
                                    <td>X</td>
                                    <td>
                                        <a href="~/AdminPanel/Articles/ArticleDetail/@item.ArticleId" class="btn btn-sm btn-info"><i class="fas fa-folder"></i></a>
                                    </td>
                                    <td>
                                        <a href="~/AdminPanel/Articles/ArticleEdit/@item.ArticleId" class="btn btn-sm btn-warning"><i class="fas fa-pen-alt"></i></a>
                                    </td>
                                    <td>
                                        <a href="~/AdminPanel/Articles/ArticleDelete/@item.ArticleId" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        @*<tfoot>
                <tr>
                    <th>Rendering engine</th>
                    <th>Browser</th>
                    <th>Platform(s)</th>
                    <th>Engine version</th>
                    <th>CSS grade</th>
                </tr>
            </tfoot>*@
                    </table>
                </div>
            </div>
        </div>
        <!-- /.card-body -->
    </div>



</section>



<script>
    $(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });
    });</script>

